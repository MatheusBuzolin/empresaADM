<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DadosFuncionarioActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/t_toolbar_padrao" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:text="NOME DO FUNCIONARIO"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dados_tv_nomeFunc"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:text="NOME"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="multiply"
        android:layout_gravity="center"
        android:onClick="comprovante"
        android:theme="@style/botaoPadrao"
        android:textSize="18sp"
        android:text="ver comprovante"/>

</LinearLayout>