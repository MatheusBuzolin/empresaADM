<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ComprovanteActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/t_toolbar_padrao" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagem do comprovante"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/compro_fotoMotorista"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:onClick="abrirFotoMotoristaGrande"
                android:src="@drawable/padrao"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <ProgressBar
                android:id="@+id/progressBar_fotoComprovante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/compro_fotoMotorista"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp" />

        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/c_divisor_dois" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID PROJETO"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:layout_marginTop="1dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/compro_tv_idComprovante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="--"
        android:textAlignment="textStart"
        android:textSize="15sp" />

    <include layout="@layout/c_divisor_dois" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIA DO COMPROVANTE"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:layout_marginTop="1dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/compro_tv_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="--"
        android:textAlignment="textStart"
        android:textSize="15sp" />

    <include layout="@layout/c_divisor_dois" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VALOR DO COMPROVANTE"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:layout_marginTop="1dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/compro_tv_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="--"
        android:textAlignment="textStart"
        android:textSize="15sp" />

    <include layout="@layout/c_divisor_dois" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESPESA"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:layout_marginTop="1dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/compro_tv_despesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="--"
        android:textAlignment="textStart"
        android:textSize="15sp" />

    <include layout="@layout/c_divisor_dois" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATUS"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:layout_marginTop="1dp"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/compro_tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="PAGO"
        android:textAlignment="textStart"
        android:textSize="15sp" />


    <Button
        android:id="@+id/add_bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="multiply"
        android:layout_gravity="center"
        android:onClick="baixarImagem"
        android:theme="@style/botaoPadrao"
        android:textSize="18sp"
        android:visibility="gone"
        android:text="baixar imagem"/>

    <Button
        android:id="@+id/add_bt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="multiply"
        android:layout_gravity="center"
        android:onClick="mudaStatus"
        android:theme="@style/botaoPadrao"
        android:textSize="18sp"
        android:text="ATUALIZA STATUS"/>

</LinearLayout>